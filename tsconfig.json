{
  "compilerOptions": {
    "allowJs": false,
    "target": "es2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "sourceMap": false
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}
